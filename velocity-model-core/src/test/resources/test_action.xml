<?xml version="1.0" encoding="UTF-8" ?>
<model write="java" identifiers.mapping="lowercase">
    <book>
        <action name="censor">
            update book set title = '** censored **' where book_id = <book_id/>
        </action>
        <action name="rename">
            update book set title = <new_title/> where book_id = <book_id/>
        </action>
    </book>
</model>
